<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeColor="@color/outline_variant"
    app:strokeWidth="1dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/card_template">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Template Icon -->
        <ImageView
            android:id="@+id/iv_template_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:background="@drawable/background_template_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/template_icon"
            tools:src="@drawable/ic_code" />

        <!-- Selection Indicator -->
        <ImageView
            android:id="@+id/iv_selection_indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            android:tint="@color/primary"
            android:background="@drawable/background_selection_indicator"
            app:layout_constraintTop_toTopOf="@id/iv_template_icon"
            app:layout_constraintEnd_toEndOf="@id/iv_template_icon"
            android:contentDescription="@string/selected" />

        <!-- Template Info -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_template_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_template_icon"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Template Name -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_template_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Flask Web Application" />

            <!-- Template Description -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_template_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/tv_template_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="A lightweight WSGI web application framework with Flask" />

            <!-- Template Metadata -->
            <LinearLayout
                android:id="@+id/layout_metadata"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_template_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Category Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/web_development"
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:textSize="12sp"
                    android:checkable="false"
                    android:clickable="false" />

                <!-- Version -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textColor="@color/text_secondary"
                    android:maxLines="1"
                    tools:text="v1.0.0" />

                <!-- Author -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_author"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textColor="@color/text_secondary"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    tools:text="by Python IDE" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_template_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/select_template"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:layout_constraintTop_toBottomOf="@id/layout_template_info"
            app:layout_constraintStart_toStartOf="@id/layout_template_info"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tags -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_template_action"
            app:layout_constraintStart_toStartOf="@id/layout_template_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:singleLine="true"
            app:selectionRequired="false"
            android:visibility="gone"
            tools:visibility="visible">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_tag_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Chip.Filter"
                android:textSize="10sp"
                android:checkable="false"
                android:clickable="false"
                android:visibility="gone"
                tools:text="REST API" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_tag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Chip.Filter"
                android:textSize="10sp"
                android:checkable="false"
                android:clickable="false"
                android:visibility="gone"
                tools:text="Database" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_tag_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Chip.Filter"
                android:textSize="10sp"
                android:checkable="false"
                android:clickable="false"
                android:visibility="gone"
                tools:text="Authentication" />

        </com.google.android.material.chip.ChipGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Selection Overlay -->
    <View
        android:id="@+id/view_selection_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_alpha_10"
        android:visibility="gone"
        android:clickable="false" />

</com.google.android.material.card.MaterialCardView>