<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nav_favorites"
            android:textAppearance="@style/TextAppearance.DarkUI.Headline"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_lg"
            android:textColor="@color/md_theme_dark_onPrimary" />

        <!-- Search Bar -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.DarkUI.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_lg"
            android:hint="@string/search_hint"
            app:startIconDrawable="@drawable/ic_search_dark">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_glass_effect"
                android:textAppearance="@style/TextAppearance.DarkUI.Body" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Filter Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_lg"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/padding_xs">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.DarkUI.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_sm"
                    android:text="@string/category_all"
                    android:checkable="true"
                    android:checked="true" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.DarkUI.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_sm"
                    android:text="@string/category_new"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.DarkUI.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_sm"
                    android:text="@string/category_popular"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.DarkUI.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_sm"
                    android:text="@string/category_trending"
                    android:checkable="true" />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Favorites Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/padding_xl"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_favorite_card" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/layout_empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/padding_xxl"
            android:layout_marginTop="@dimen/margin_xxl"
            android:visibility="gone">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="@dimen/margin_md"
                android:background="@drawable/bg_glass_effect"
                android:padding="@dimen/padding_md"
                app:srcCompat="@drawable/ic_favorite_border_dark"
                app:tint="@color/md_theme_dark_onSurfaceVariant" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_favorites"
                android:textAppearance="@style/TextAppearance.DarkUI.Title"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_sm"
                android:textColor="@color/md_theme_dark_onSurfaceVariant" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ابدأ بإضافة عناصر إلى مفضلتك"
                android:textAppearance="@style/TextAppearance.DarkUI.Body"
                android:gravity="center"
                android:textColor="@color/md_theme_dark_onSurfaceVariant" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.DarkUI.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_lg"
                android:text="استكشف المحتوى"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>