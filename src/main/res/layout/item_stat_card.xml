<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.DarkUI.Card"
    android:layout_width="120dp"
    android:layout_height="100dp"
    android:layout_marginEnd="@dimen/margin_sm"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:rippleColor="@color/ripple_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/padding_md">

        <TextView
            android:id="@+id/text_stat_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xs"
            android:text="42"
            android:textAppearance="@style/TextAppearance.DarkUI.Title"
            android:textColor="@color/md_theme_dark_primary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_stat_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Label"
            android:textAppearance="@style/TextAppearance.DarkUI.Caption"
            android:textColor="@color/md_theme_dark_onSurfaceVariant"
            android:gravity="center" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_xs"
            android:progress="75"
            app:indicatorColor="@color/md_theme_dark_primary"
            app:trackColor="@color/md_theme_dark_surfaceVariant"
            app:trackThickness="3dp"
            app:indicatorSize="40dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>