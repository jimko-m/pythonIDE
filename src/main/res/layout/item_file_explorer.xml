<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/file_item_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="2dp">

    <ImageView
        android:id="@+id/file_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_file"
        android:contentDescription="نوع الملف" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/file_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="filename.py"
            android:textColor="@color/file_name_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/file_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Python"
            android:textColor="@color/file_type_text"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- File Status Indicators -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <!-- Modified indicator (if file has unsaved changes) -->
        <View
            android:id="@+id/modified_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="2dp"
            android:background="@drawable/modified_indicator"
            android:visibility="gone" />

        <!-- Error indicator (if file has syntax errors) -->
        <ImageView
            android:id="@+id/error_indicator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_error"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>