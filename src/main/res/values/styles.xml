<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Text Styles -->
    <style name="TextAppearance.DarkUI" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
        <item name="android:textSize">@dimen/text_size_lg</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <style name="TextAppearance.DarkUI.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="TextAppearance.DarkUI.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">medium</item>
    </style>
    
    <style name="TextAppearance.DarkUI.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <style name="TextAppearance.DarkUI.Body.Small" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.DarkUI.Label" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">medium</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="TextAppearance.DarkUI.Caption" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="android:textSize">@dimen/text_size_xs</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.DarkUI.Display" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textColor">@color/md_theme_dark_primary</item>
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">light</item>
    </style>
    
    <style name="TextAppearance.DarkUI.Error" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/md_theme_dark_error</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.DarkUI.Success" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/success_dark</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.DarkUI.Button" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textColor">@color/button_primary_text_dark</item>
        <item name="android:backgroundTint">@color/button_primary_dark</item>
        <item name="rippleColor">@color/ripple_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">medium</item>
        <item name="cornerRadius">@dimen/shape_corner_md</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/space_sm</item>
    </style>
    
    <style name="Widget.DarkUI.Button.Elevated" parent="Widget.Material3.Button.Elevated">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textColor">@color/button_primary_text_dark</item>
        <item name="android:backgroundTint">@color/button_primary_dark</item>
        <item name="rippleColor">@color/ripple_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">@dimen/shape_corner_md</item>
    </style>
    
    <style name="Widget.DarkUI.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:textSize">@dimen/text_size_md</textSize>
        <item name="android:textColor">@color/button_outline_text_dark</item>
        <item name="strokeColor">@color/button_outline_dark</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/ripple_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">@dimen/shape_corner_md</item>
    </style>
    
    <style name="Widget.DarkUI.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textColor">@color/md_theme_dark_primary</item>
        <item name="rippleColor">@color/ripple_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Widget.DarkUI.Button.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="iconTint">@color/md_theme_dark_onSurface</item>
        <item name="rippleColor">@color/ripple_dark</item>
    </style>
    
    <style name="Widget.DarkUI.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="backgroundTint">@color/md_theme_dark_primary</item>
        <item name="tint">@color/md_theme_dark_onPrimary</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.DarkUI.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_margin">@dimen/margin_sm</item>
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="strokeColor">@color/card_border_dark</item>
        <item name="strokeWidth">0dp</item>
        <item name="contentPadding">@dimen/padding_md</item>
        <item name="contentPaddingLeft">@dimen/padding_md</item>
        <item name="contentPaddingRight">@dimen/padding_md</item>
        <item name="contentPaddingTop">@dimen/padding_md</item>
        <item name="contentPaddingBottom">@dimen/padding_md</item>
    </style>
    
    <style name="Widget.DarkUI.Card.Glass" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_margin">@dimen/margin_sm</item>
        <item name="cardBackgroundColor">@color/glass_background_dark</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="strokeColor">@color/glass_border_dark</item>
        <item name="strokeWidth">1dp</item>
        <item name="contentPadding">@dimen/padding_md</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <!-- Input Field Styles -->
    <style name="Widget.DarkUI.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/md_theme_dark_primary</item>
        <item name="hintTextColor">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="startIconTint">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="endIconTint">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="boxBackgroundColor">@color/md_theme_dark_surface</item>
        <item name="android:textColorHint">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/md_theme_dark_error</item>
        <item name="boxStrokeErrorColor">@color/md_theme_dark_error</item>
    </style>
    
    <style name="Widget.DarkUI.EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
        <item name="android:textColorHint">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    
    <!-- Navigation Styles -->
    <style name="Widget.DarkUI.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/md_theme_dark_surface</item>
        <item name="itemIconTint">@drawable/bottom_nav_color_selector_dark</item>
        <item name="itemTextColor">@drawable/bottom_nav_color_selector_dark</item>
        <item name="elevation">8dp</item>
        <item name="menu">@menu/bottom_nav_menu</item>
    </style>
    
    <style name="Widget.DarkUI.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="android:background">@color/md_theme_dark_surface</item>
        <item name="itemIconTint">@drawable/nav_view_color_selector_dark</item>
        <item name="itemTextColor">@drawable/nav_view_color_selector_dark</item>
        <item name="elevation">16dp</item>
        <item name="menu">@menu/drawer_menu</item>
        <item name="headerLayout">@layout/nav_header</item>
    </style>
    
    <!-- Toolbar Styles -->
    <style name="Widget.DarkUI.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/md_theme_dark_surface</item>
        <item name="titleTextColor">@color/md_theme_dark_onSurface</item>
        <item name="subtitleTextColor">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.Dark</item>
        <item name="titleCentered">false</item>
        <item name="subtitleCentered">false</item>
    </style>
    
    <style name="Widget.DarkUI.Toolbar.Primary" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/md_theme_dark_primary</item>
        <item name="titleTextColor">@color/md_theme_dark_onPrimary</item>
        <item name="subtitleTextColor">@color/md_theme_dark_onPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.Dark</item>
        <item name="titleCentered">false</item>
    </style>
    
    <!-- Progress Styles -->
    <style name="Widget.DarkUI.ProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">@color/md_theme_dark_primary</item>
        <item name="trackColor">@color/md_theme_dark_surfaceVariant</item>
        <item name="trackThickness">4dp</item>
        <item name="trackCornerRadius">2dp</item>
        <item name="trackStopIndicatorColor">@color/md_theme_dark_primary</item>
    </style>
    
    <style name="Widget.DarkUI.CircularProgressBar" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/md_theme_dark_primary</item>
        <item name="indicatorSize">48dp</item>
        <item name="trackColor">@color/md_theme_dark_surfaceVariant</item>
        <item name="trackThickness">4dp</item>
    </style>
    
    <!-- Switch Styles -->
    <style name="Widget.DarkUI.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/md_theme_dark_onPrimary</item>
        <item name="trackTint">@color/md_theme_dark_surfaceVariant</item>
        <item name="thumbTintMode">multiply</item>
    </style>
    
    <!-- Chip Styles -->
    <style name="Widget.DarkUI.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
        <item name="chipBackgroundColor">@color/md_theme_dark_secondaryContainer</item>
        <item name="android:textAppearance">@style/TextAppearance.DarkUI.Body.Small</item>
    </style>
    
    <!-- List Item Styles -->
    <style name="Widget.DarkUI.ListItem" parent="Widget.Material3.ListItem">
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/list_item_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    
    <!-- Container Styles -->
    <style name="Widget.DarkUI.Container" parent="android:Widget">
        <item name="android:background">@color/md_theme_dark_background</item>
        <item name="android:padding">@dimen/screen_padding</item>
    </style>
    
    <style name="Widget.DarkUI.Container.Card" parent="Widget.DarkUI.Card">
        <item name="android:layout_margin">@dimen/margin_md</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- Status Bar and Navigation -->
    <style name="StatusBar.Dark" parent="android:Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar_dark</item>
        <item name="android:navigationBarColor">@color/navigation_bar_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
</resources>